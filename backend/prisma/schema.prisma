generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @unique @id @default(uuid())
  name String
  vote Vote[]
}

model Vote{
  id Int @unique @id @default(autoincrement())
  userId String
  vote VoteOptions
  user User @relation(fields: [userId], references: [id])
}

enum VoteOptions {
  OptionA
  OptionB
  OptionC
}
